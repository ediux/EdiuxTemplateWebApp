@using EdiuxTemplateWebApp.Models
@model List<Menus>
<ul class="sub-menu">
    @foreach (Menus item in Model)
    {
        if (item.IsExternalLinks)
        {
            <li><a href="@item.ExternalURL"><i class="icon-angle-right"></i>@item.Name</a></li>
        }
        else
        {
            if (item.System_ControllerActions != null)
            {
                if (item.System_ControllerActions.System_Controllers != null)
                {
                    <li><a href="@Url.Action(item.System_ControllerActions.Name,item.System_ControllerActions.System_Controllers.Name)"><i class="icon-angle-right"></i>@item.Name</a></li>
                }
            }            
        }
        if (item.ChildMenus.Any(v => v.Void == false))
        {
            @Html.Partial("_SubMenuBarPartial", item.ChildMenus.ToList())
        }
    }
</ul>