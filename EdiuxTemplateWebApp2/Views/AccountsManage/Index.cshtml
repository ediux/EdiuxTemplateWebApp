@model IEnumerable<EdiuxTemplateWebApp.Models.ApplicationUser>
@using PagedList.Mvc
@using PagedList
@{
    ViewBag.Title = "帳號管理";
}
@{
    var data = Model as IPagedList;
}
@section pagelevelcss{
    @*<link href="~/Content/PagedList.css" rel="stylesheet" />*@
}
<div class="row">
    <div class="col-lg-12">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-user"></i>
                <h3>@ViewBag.Title</h3>
            </div>

            <div class="widget-content">
                <div class="body">

                    <div class="btn-group" role="group" aria-label="First group">
                        <a href="@Url.Action("Index","Manage")" class="btn btn-primary" title="回到系統管理"><i class="glyphicon glyphicon-arrow-left"></i></a>
                    </div>
                    <div class="btn-group" role="group" aria-label="First group">
                        <a href="@Url.Action("Create")" class="btn btn-info" title="建立帳號"><i class="glyphicon glyphicon-plus"></i></a>
                    </div>
                    <hr />
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered table-images">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UserName)
                                    </th>
                                    <th class="hidden-xs hidden-sm">
                                        @Html.DisplayNameFor(model => model.DisplayName)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.EMail)
                                    </th>
                                    <th class="hidden-xs hidden-sm">
                                        @Html.DisplayNameFor(model => model.CreateTime)
                                    </th>
                                    <th class="hidden-xs hidden-sm">
                                        @Html.DisplayNameFor(model => model.LastActivityTime)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td class="hidden-xs hidden-sm">
                                            @Html.DisplayFor(modelItem => item.DisplayName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EMail)
                                        </td>
                                        <td class="hidden-xs hidden-sm">
                                            @Html.DisplayFor(modelItem => item.CreateTime)
                                        </td>
                                        <td class="hidden-xs hidden-sm">
                                            @Html.DisplayFor(modelItem => item.LastActivityTime)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary btn-xs m-r-5" title="編輯"><i class="glyphicon glyphicon-edit"></i></a>
                                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info btn-xs m-r-5" title="詳細資訊"><i class="glyphicon glyphicon-info-sign"></i></a>
                                            @if (!item.UserName.Equals("root", StringComparison.InvariantCultureIgnoreCase))
                                            {
                                                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-xs m-r-5" title="刪除"><i class="glyphicon glyphicon-remove"></i></a>
                                            }
                                            
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
             
                    <div class="clearfix">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="pull-left">
                                    @Html.PagedListPager(data, p => Url.Action("Index", new { pageid = p }))
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="pull-right">
                                    <div class="btn-group">
                                        <button data-toggle="dropdown" class="btn btn-sm btn-inverse dropdown-toggle"> &nbsp; 分頁大小 &nbsp; <i class="icon-caret-down"></i> </button>
                                        <ul class="dropdown-menu" style="z-index:9999;">
                                            <li><a href="@Url.Action("Index", new { pageid = data.PageNumber, pagesize = 5 })">每頁5筆</a></li>
                                            <li><a href="@Url.Action("Index", new { pageid = data.PageNumber, pagesize = 10 })">每頁10筆</a></li>
                                            <li><a href="@Url.Action("Index", new { pageid = data.PageNumber, pagesize = 15 })">每頁15筆</a></li>
                                            <li><a href="@Url.Action("Index", new { pageid = 1, pagesize = -1 })">全部</a></li>
                                        </ul>
                                    </div>
                                    @*<button class="btn btn-default btn-sm"> Send to ... </button>*@
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
