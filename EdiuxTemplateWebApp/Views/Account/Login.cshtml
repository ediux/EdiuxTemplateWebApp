                <a class="styleswitch" rel="f" href=""><img alt="" src="/Content/images/f.jpg"></a>
                <a class="styleswitch" rel="g" href=""><img alt="" src="/Content/images/g.jpg"></a>
                <a class="styleswitch" rel="h" href=""><img alt="" src="/Content/images/h.jpg"></a>
                <a class="styleswitch" rel="i" href=""><img alt="" src="/Content/images/i.jpg"></a>
                <a class="styleswitch" rel="j" href=""><img alt="" src="/Content/images/j.jpg"></a>
            </div>

        </div>
    </div>


    <!--switcher html end-->
    <script src="/Content/assets/switcher/switcher.js"></script>
    <script src="/Content/assets/switcher/moderziner.custom.js"></script>
