@using EdiuxTemplateWebApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "登入";
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <title>Thin Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="/Content/css/bootstrap.css" rel="stylesheet" media="screen">
    <link href="/Content/css/thin-admin.css" rel="stylesheet" media="screen">
    <link href="/Content/css/font-awesome.css" rel="stylesheet" media="screen">
    <link href="/Content/style/style.css" rel="stylesheet">



</head>
<body>
    <div class="login-logo">
        <img src="/Content/images/logo.png" width="147" height="33">
    </div>

    <div class="widget">
        <div class="login-content">
            <div class="widget-content" style="padding-bottom:0;">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "no-margin", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h3 class="form-title">使用本機帳戶登入。</h3>
                    <fieldset>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group no-margin">
                            @Html.LabelFor(m => m.Email, new { @for = "email" })

                            <div class="input-group input-group-lg">
                                <span class="input-group-addon">
                                    <i class="icon-user"></i>
                                </span>
                                @Html.TextBoxFor(m => m.Email, new { @id = "email", @type = "email", @placeholder = "Your Email", @class = "form-control input-lg" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @for = "password" })

                            <div class="input-group input-group-lg">
                                <span class="input-group-addon">
                                    <i class="icon-lock"></i>
                                </span>
                                @Html.PasswordFor(m => m.Password, new { @placeholder = "Your Password", @class = "form-control input-lg", @id = "password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                        </div>
                    </fieldset>
                    <div class="form-actions">
                        <label class="checkbox">
                            <span>@Html.CheckBoxFor(m => m.RememberMe)</span> @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                        <button class="btn btn-warning pull-right" type="submit">
                            登入 <i class="m-icon-swapright m-icon-white"></i>
                        </button>
                        <div class="forgot">@Html.ActionLink("忘記密碼?", "ForgotPassword",null,new { @class = "forgot" })</div>
                        <p class="text-center">
                            @Html.ActionLink("註冊為新使用者", "Register")
                        </p>
                    </div>




                    @* 請在啟用密碼重設功能的帳戶確認之後啟用此項目
                        <p>
                            
                        </p>*@
                }
            </div>
        </div>
    </div>








    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/Content/js/jquery.js"></script>
    <script src="/Content/js/bootstrap.min.js"></script>





    <!--switcher html start-->
    <div class="demo_changer active" style="right: 0px;">
        <div class="demo-icon"></div>
        <div class="form_holder">


            <div class="predefined_styles">
                <a class="styleswitch" rel="a" href=""><img alt="" src="/Content/images/a.jpg"></a>
                <a class="styleswitch" rel="b" href=""><img alt="" src="/Content/images/b.jpg"></a>
                <a class="styleswitch" rel="c" href=""><img alt="" src="/Content/images/c.jpg"></a>
                <a class="styleswitch" rel="d" href=""><img alt="" src="/Content/images/d.jpg"></a>
