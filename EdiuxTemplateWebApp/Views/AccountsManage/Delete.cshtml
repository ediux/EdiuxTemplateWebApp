@model EdiuxTemplateWebApp.Models.ApplicationUser

@{
    ViewBag.Title = "Delete";
}
<div class="row">
    <div class="col-md-8">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-user"></i>
                <h3>
                    @ViewBag.Title
                </h3>
            </div>
            <div class="widget-content">
                <div class="btn-group" role="group" aria-label="First group">
                    <a href="@Url.Action("Index")" class="btn btn-primary" title="回到帳號清單"><i class="glyphicon glyphicon-arrow-left"></i></a>
                </div>
                <h3>@string.Format("您確定要停用帳號 '{0}' 嗎?", Model.UserName)</h3>
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.UserName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.UserName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.DisplayName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DisplayName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.EMail)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.EMail)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.CreateUserId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CreateUserId)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.CreateTime)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CreateTime)
                        </dd>

                    </dl>
                </div>
                @using (Html.BeginForm())
                {
                @Html.AntiForgeryToken()
                <div class="panel-footer text-right">
                    <input type="submit" value="刪除" class="btn btn-danger" />
                </div>
                }
            </div>
        </div>
    </div>
</div>