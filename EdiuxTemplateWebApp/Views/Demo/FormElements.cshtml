<div class="row">
    <div class="col-md-12">
        <h2 class="page-title">Form Elements <small>Inputs, controls and more</small></h2>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-align-left"></i>
                <h3>Inputs </h3>
            </div>
            <div class="widget-content">
                <form method="post" class="form-horizontal">
                    <fieldset>
                        <legend class="section">Horizontal form</legend>

                        <div class="control-group">
                            <div class="col-md-3">
                                <label for="normal-field" class="control-label">Normal field</label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <input type="text" placeholder="May have placeholder" class="form-control" id="normal-field">
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="col-md-3">
                                <label for="normal-field" class="control-label">Transparent input</label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <input type="text" placeholder="Stylish, huh??" class="form-control input-transparent" id="transparent-field">
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="col-md-3">
                                <label for="hint-field" class="control-label"> Label hint </label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="hint-field">
                                </div>
                            </div>
                        </div>


                        <div class="control-group">
                            <div class="col-md-3">
                                <label for="tooltip-enabled" class="control-label ">Tooltip enabled</label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <input type="text" placeholder="Hover over me.." data-original-title="Some explanation text here" data-placement="top" class="form-control" id="tooltip-enabled">
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="col-md-3">
                                <label for="disabled-input" class="control-label ">Disabled input</label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <input type="text" value="Default value" disabled="disabled" class="form-control" id="disabled-input">
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="col-md-3">
                                <label for="max-length" class="control-label ">Max length</label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <input type="text" data-original-title="You cannot write more than 3 characters." data-placement="top" placeholder="Max length 3 characters" class="form-control" maxlength="3" id="max-length">
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="col-md-3">
                                <label for="prepended-input" class="control-label">Prepended input</label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="icon-user"></i></span>
                                        <input type="text" placeholder="Username" size="16" class="form-control" id="prepended-input">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="col-md-3">
                                <label for="password-field" class="control-label">Password</label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="icon-lock"></i></span>
                                        <input type="password" placeholder="Password" id="password-field" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="col-md-3">
                                <label for="appended-input" class="control-label">Appended input</label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="text" size="16" class="form-control" id="appended-input">
                                        <span class="input-group-addon">.00</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="col-md-3">
                                <label for="combined-input" class="control-label">Combined</label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">$</span>
                                        <input type="text" size="16" class="form-control" id="combined-input">
                                        <span class="input-group-addon">.00</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <div class="form-actions">
                        <div>
                            <button class="btn btn-primary" type="submit">Save Changes</button>
                            <button class="btn btn-default" type="button">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div class="col-lg-6">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-ok-sign"></i>
                <h3> Validation</h3>
            </div>
            <div class="widget-content">
                <form class="form-horizontal label-left" method="post"
                      data-validate="parsley"
                      novalidate="novalidate">
                    <fieldset>
                        <legend class="section"> characters input. </legend>
                        <div class="control-group">
                            <div class="col-md-4">
                                <label class="control-label" for="basic">Simple required</label>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group">
                                    <input type="text" id="basic" name="basic" class="form-control"
                                           required="required">
                                </div>

                            </div>
                        </div>
                        <div class="control-group">
                            <div class="col-md-4">
                                <label class="control-label" for="basic-change"> Min-length<span class="help-block"> At least 10 </span> </label>
                            </div>

                            <div class="col-md-8">
                                <div class="form-group">
                                    <input type="text" id="basic-change" name="basic-change" class="form-control"
                                           data-trigger="change"
                                           data-minlength="10"
                                           required="required">
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend class="section"> <span class="label label-important"> HTML5 </span> input types supported </legend>
                        <div class="control-group">
                            <div class="col-md-3">
                                <label class="control-label" for="email"> E-mail </label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <input type="email" id="email" name="email" class="form-control"
                                           data-trigger="change"
                                           data-validation-minlength="1"
                                           required="required">
                                    <span class="help-block"> This one is triggered even when 1 character has been input </span>
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="col-md-3">
                                <label class="control-label" for="number"> Number </label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <input type="number" id="number" name="number" class="form-control"
                                           required="required">
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="col-md-3">
                                <label class="control-label" for="range"> Range </label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <input type="text" data-range="[10, 100]" class="form-control"
                                           id="range" name="range"
                                           data-trigger="change"
                                           data-validation-minlength="1"
                                           required="required">
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend class="section"> More validation </legend>
                        <div class="control-group">
                            <div class="col-md-3">
                                <label class="control-label" for="password"> Password helpers </label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <input type="password" id="password" name="password" class="form-control"
                                           data-trigger="change"
                                           data-minlength="6"
                                           required="required">
                                </div>
                                <div class="form-group">
                                    <input type="password" id="password-r" name="password-r" class="form-control"
                                           data-trigger="change"
                                           data-minlength="6"
                                           data-equalto="#password"
                                           required="required">
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="col-md-3">
                                <label class="control-label" for="website"> Website </label>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <input type="text" id="website" name="website" class="form-control"
                                           data-trigger="change"
                                           data-type="url"
                                           required="required">
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-danger">Validate &amp; Submit</button>
                        <button type="button" class="btn btn-default">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
