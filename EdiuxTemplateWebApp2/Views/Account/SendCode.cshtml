@model EdiuxTemplateWebApp.Models.SendCodeViewModel
@{
    ViewBag.Title = "傳送";
}

<div class="row">
    <div class="col-lg-8">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-tasks"></i>
                <h3>@ViewBag.Title</h3>
            </div>
            <div class="widget-content">
                @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("rememberMe", @Model.RememberMe)
                    <h4>傳送驗證碼</h4>
                    <hr />
                    <div class="row">
                        <div class="col-md-8">
                            選取雙因素驗證提供者:
                            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                            <input type="submit" value="提交" class="btn btn-default" />
                        </div>
                    </div>
                }
            </div>
        </div>


    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
