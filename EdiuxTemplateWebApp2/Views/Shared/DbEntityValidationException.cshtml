@model System.Web.Mvc.HandleErrorInfo
@using System.Data.Entity.Validation
@{
    ViewBag.Title = "錯誤";
    DbEntityValidationException ex = Model.Exception as DbEntityValidationException;
}


<div class="widget">
    <div class="widget-header">
        <i class="icon-exclamation-sign"></i>
        <h3>@ViewBag.Title</h3>
    </div>
    <div class="widget-content">
        <h1 class="text-danger">錯誤。</h1>
        <h2 class="text-danger">處理您的要求時發生驗證錯誤。</h2>

        <dl class="dl-horizontal">
            @foreach (var dbvaerr in ex.EntityValidationErrors)
            {
                foreach (var err in dbvaerr.ValidationErrors)
                {
                    <dt>屬性</dt>
                    <dd>@err.PropertyName</dd>
                    <dt>錯誤訊息</dt>
                    <dd>@err.ErrorMessage</dd>
                }
            }
        </dl>
    </div>
</div>




